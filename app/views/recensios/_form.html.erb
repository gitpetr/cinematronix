<%= form_for @recensio, html: { multipart: true } do |f| %>
  <p>
    <%= f.label :critic_name, 'Ваше имя' %><br>
    <%= f.text_field :critic_name %>
  </p>

  <p>
    <%= f.label :critic_email, 'email' %><br>
    <%= f.text_field :critic_email %>
  </p>

  <p>
    <%= f.label :body, 'текст' %><br>
    <%= f.text_area :body %>
  </p>
  <%= f.submit 'ok' %>
<% end %>
