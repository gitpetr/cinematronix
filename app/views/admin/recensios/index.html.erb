<h1>Recensios</h1>
<h2><%= link_to 'Add Recensio', new_admin_recensio_path %></h2>
 
 <table>
<% @recensios.each do |recensio| %>
  <tr>
    <th>
      <p>
        <%= link_to recensio.critic_name, admin_recensio_path(recensio) %>
        <%= link_to recensio.critic_email, admin_recensio_path(recensio) %>
      </p>
      <p>
        <%= link_to 'Edit', edit_admin_recensio_path(recensio) %><br>
        <%= link_to 'Delete', admin_recensio_path(recensio), method: :delete, data: { confirm: 'Действительно удалить?' } %>
      </p>

    </th>

    <td><%= recensio.body %></td>
  </tr>

<% end %>

</table>
 </div>
