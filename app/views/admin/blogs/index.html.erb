<h1>Posts</h1>
<h2><%= link_to 'Add Post', new_admin_blog_path %></h2>
 
 <table>
<% @posts.each do |post| %>
  <tr>
    <td>
      <%= link_to post.title, admin_blog_path(post) %>
    </td>
    <td>
      <%= post.body %>
    </td>
    <td><%= link_to 'edit', edit_admin_blog_path(post) %></td>
    <td><%= link_to('delete', admin_blog_path(post), data: { confirm: 'Действительно удалить?' }) %></td>
  </tr>
<% end %>

</table>
